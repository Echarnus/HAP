# HAP - Secrets Template
# Copy this file to secrets.yaml and fill in your actual values
# NEVER commit secrets.yaml to git!
#
# Usage on Raspberry Pi:
#   cp secrets.yaml.example secrets.yaml
#   nano secrets.yaml  # Edit with real values

# =============================================================================
# Home Assistant Core
# =============================================================================
ha_latitude: "50.8503"
ha_longitude: "4.3517"
ha_elevation: "13"
ha_name: "Home"
ha_unit_system: "metric"
ha_time_zone: "Europe/Brussels"

# =============================================================================
# ENTSO-E Electricity Prices
# Get your API key from: https://transparency.entsoe.eu/
# =============================================================================
entsoe_api_key: "your-entsoe-api-key-here"

# =============================================================================
# Tesla Fleet API
# Register at: https://developer.tesla.com/
# =============================================================================
tesla_client_id: "your-tesla-client-id"
tesla_client_secret: "your-tesla-client-secret"
tesla_access_token: "your-tesla-access-token"
tesla_refresh_token: "your-tesla-refresh-token"

# =============================================================================
# EEVEE Mobility (if API available)
# =============================================================================
eevee_username: "your-eevee-username"
eevee_password: "your-eevee-password"

# =============================================================================
# Fluvius / My Fluvius (if using API instead of P1)
# =============================================================================
fluvius_username: "your-fluvius-username"
fluvius_password: "your-fluvius-password"

# =============================================================================
# Email (for EEVEE receipt parsing fallback)
# =============================================================================
email_imap_server: "imap.example.com"
email_username: "your-email@example.com"
email_password: "your-email-password"

# =============================================================================
# Home Assistant Internal
# =============================================================================
# Long-lived access token for scripts/integrations
ha_long_lived_token: "your-long-lived-access-token"

# =============================================================================
# Notifications
# =============================================================================
# Mobile app device IDs (found in HA Companion App settings)
mobile_app_device_id: "your-device-id"

# =============================================================================
# MQTT (if using Zigbee2MQTT with external broker)
# =============================================================================
mqtt_username: "mqtt-user"
mqtt_password: "mqtt-password"
